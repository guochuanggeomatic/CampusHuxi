<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="500dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/route_name_text_view"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:textAlignment="inherit"
        android:text="站点："
        android:background="@android:color/transparent"
        android:textColor="@color/white"
        android:textSize="15dp" />

    <ListView
        android:id="@+id/fly_station_list_view"
        android:layout_width="match_parent"
        android:layout_height="120dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="31dp">

        <Button
            android:id="@+id/pause_play_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/fly_play"
            />

        <Button
            android:id="@+id/fly_stop_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/fly_stop"
            />

    </LinearLayout>

</LinearLayout>
